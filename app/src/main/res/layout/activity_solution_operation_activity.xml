<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"

    tools:context=".Solution_operation_activity">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/num9_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num7_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num7_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num5_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num5_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num3_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num3_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num1_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num1_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num2_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="76dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num4_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num2_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num6_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num4_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/num8_BT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/num6_BT"
        app:layout_constraintTop_toBottomOf="@+id/layout" />

    <Button
        android:id="@+id/soa_return_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="返回主畫面"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num6_BT" />


</android.support.constraint.ConstraintLayout>